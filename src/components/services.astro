---
const { lang } = Astro.props as Props;
interface Props {
  lang: "en" | "ar";
}
const content = {
  en: {
    title: "Our Services",
    services: [
      { title: "General Construction", desc: "High-quality building projects." },
      { title: "Renovation", desc: "Modern and efficient renovation solutions." },
      { title: "Project Management", desc: "Complete supervision and execution." },
    ],
  },
  ar: {
    title: "خدماتنا",
    services: [
      { title: "المقاولات العامة", desc: "تنفيذ مشاريع بناء بأعلى جودة." },
      { title: "التشطيبات", desc: "حلول تشطيب حديثة وعملية." },
      { title: "إدارة المشاريع", desc: "إشراف وتنفيذ كامل للمشروع." },
    ],
  },
};
---

<section class="py-20 bg-white">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-12">
      {content[lang].title}
    </h2>

    <div class="grid md:grid-cols-3 gap-8">
      {content[lang].services.map((service) => (
        <div class="bg-gray-100 p-6 rounded-xl shadow hover:shadow-lg transition">
          <h3 class="text-xl font-semibold mb-3">
            {service.title}
          </h3>
          <p class="text-gray-600">
            {service.desc}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
